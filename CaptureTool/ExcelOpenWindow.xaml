<Window x:Class="CaptureTool.ExcelOpenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptureTool"
        mc:Ignorable="d"
        Title="使用するExcelファイルを選択" Height="100" Width="250" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="openButton" Content="開く" Margin="0,0,2.5,0" Click="openButton_Click"/>
        <Button Content="新規作成" Grid.Column="1" Margin="2.5,0,0,0"/>
    </Grid>
</Window>
