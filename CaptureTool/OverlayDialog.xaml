<Window x:Class="CaptureTool.OverlayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptureTool"
        mc:Ignorable="d"
        Title="OverlayDialog" Height="80" Width="150" WindowStyle="None" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False" Focusable="False" Loaded="Window_Loaded">
    <Grid x:Name="gridView">
        <Border BorderBrush="Transparent" Background="Gray" CornerRadius="20" Opacity="0.5"/>
        <!--<Rectangle Stroke="Transparent" Opacity="0.5" Fill="White"/>-->
        <TextBlock x:Name="viewingText" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
